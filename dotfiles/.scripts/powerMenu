#!/bin/sh
# Power Menu Script

# Get what user wants to do
action=$(echo -e "Power Down\nReboot\nSuspend\nHibernate\nLock\nBlank Screen" | dmenu -i)

case $action in
	"Power Down")
		loginctl poweroff
		;;
	"Reboot")
		loginctl reboot
		;;
	"Suspend")
		blurlock -s
		;;
	"Hibernate")
		blurlock -h
		;;
	"Lock")
		blurlock
		;;
	"Blank Screen")
		sleep 3
		xset dpms force off
		;;
esac
