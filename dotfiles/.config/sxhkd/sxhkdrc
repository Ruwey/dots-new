# Media Keys {{{
# Music Bindings

XF86Audio{Prev,Next,Play}
	playerctl -p $(cat $HOME/.local/share/mediaPlayer) {previous,next,play-pause}

# Volume Bindings
{%@@ if profile == "terminator" @@%}
alt + {equal,minus}{_, + shift}
{%@@ elif profile == "BigBrother" @@%}
XF86Audio{Raise,Lower}Volume{_, + shift}
{%@@ endif @@%}
	chVol {+,-}{5,2}%

# Mute
{%@@ if profile == "terminator" @@%}
ctrl + alt + BackSpace
{%@@ elif profile == "BigBrother" @@%}
XF86AudioMute
{%@@ endif @@%}
	chVol mute

# Change media player
alt + m
	chMp

#}}}

# Start Programs {{{

# Termite (terminal)
alt + Return
	termite

# Termite with tmux
alt + shift + Return
	launchTmux

# Rofi (App Launcher)
alt + d
	rofi -show run

# Rofi in superuser
alt + shift + d
	rofi -run-command "gksu {cmd}" -show run

# }}}

# Reload sxhkd
alt + ctrl + r
	pkill -USR1 -x sxhkd

# Make current window blink while holding tab button
alt + Tab
	picom-trans -c 50 
@alt + Tab
	picom-trans -c 100

